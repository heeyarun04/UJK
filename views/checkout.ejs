<div class="container mt-5">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Order Summary</h5>
      <p><strong>Order ID:</strong> <%= order.id_order %></p>
      <p><strong>User ID:</strong> <%= order.id_user %></p>
      <p><strong>Shipping Address:</strong> <%= order.alamat_pengiriman %></p>
      <p><strong>Payment Method:</strong> <%= order.metode_pembayaran %></p>
      <p><strong>Total Cost:</strong> <%= order.total_biaya %></p>
      <h6>Order Items:</h6>
      <ul>
        <% order.items.forEach(item => { %>
          <li>
            <strong>Product:</strong> <%= item.nama_produk %> - <strong>Quantity:</strong> <%= item.kuantitas %> - <strong>Price:</strong> <%= item.harga %>
          </li>
        <% }) %>
      </ul>
    </div>
  </div>
</div>
